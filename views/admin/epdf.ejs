<!--NAVIGATION BAR FOR ADMIN-->
<%- include('../partials/adminNav') %>

<div class="container my-4">
  <div class="row justify-content-center">
    <div class="col-md-7">
      <div class="card">
        <div class="card-header text-center bg-primary">
          <h4>Add Book</h4>
        </div>
        <div class="card-block">
          <%- include('../partials/alerts') %>
          <form class="p-3" action="/admin/upload/epdf" method="post" enctype="multipart/form-data">

            <div class="form-group" hidden readonly>
              <label class="form-control-label"> Title</label>
              <input type="text" name="book[title]" placeholder="book[title]" class="form-control">
            </div>

            <div class="form-group">
              <label class="form-control-label"> Author Name</label>
              <input type="text" name="book[author]" placeholder="book[author]" class="form-control" required>
            </div>

            <div class="form-group">
              <label class="form-control-label"> ISBN</label>
              <input type="text" name="book[ISBN]" placeholder="book[ISBN]" class="form-control" required>
            </div>

            <div class="form-group">
              <label class="form-control-label"> Category</label>
              <input type="text" name="book[category]" placeholder="book[category]" class="form-control" required>
            </div>

            <div class="form-group">
              <label class="form-control-label"> Stock</label>
              <input type="Number" name="book[stock]" placeholder="book[stock]" class="form-control" >
            </div>

            <div class="form-group">
              <label class="form-control-label"> Book Description</label>
              <textarea type="text" name="book[description]" cols="10" rows="10" class="form-control" required></textarea>
            </div>
            <div class="form-group">
              <label class="form-control-label"> Choose a file</label>
              <input type="file"  name="book"  id="book" class="form-control" required/>
            </div>


            <button type="submit" class="btn btn-primary btn-block" >Submit</button>


          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript" src="/static/ckeditor/ckeditor.js"></script>
<script>
  CKEDITOR.replace('book[description]');
</script>
